
<% if current_user.nil? %>
<% else %>
	<%= current_user.id %>
	<%= image_tag current_user.avatar.url(:medium) %>
<% end %>
<% if @posts %>
	<div id="blogpost">
		<% @posts.reverse.each do |b|%>
		<div class="col-lg-6">
			
				<h3><%=b.title%></h3>
				<h6>By: <%= b.user.username %></h6>
			<% if b.blog_post.length > 100 %>
				<p><%=/.{400}/.match(b.blog_post)%>...<a href="/posts/<%= b.id %>">Read More</a></p>
			<% else %>
				<p><%= b.blog_post %><a href="/posts/<%= b.id %>"> Read More</a></p>
			<% end %>
		</div>
		<%end%>
	</div>
<%end%>